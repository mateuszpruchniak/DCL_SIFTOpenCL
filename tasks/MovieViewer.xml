<?xml version="1.0" encoding="utf-8"?>
<Task>
	<!-- List of components -->
	<Components>
		<Mov1 type="Movie" thread="Exec1" group="s1">
			<filename>/home/discode/public_html/datasets/movies_sign/Sign_1_HD.avi</filename>
		</Mov1>

		<Wnd1 type="CvWindow" thread="Exec3" group="s1">
			<title>Preview</title>
		</Wnd1>
	</Components>

	<!-- Threads of execution -->
	<Executors>
		<Exec1 type="continuous">
			<main_component>Mov1</main_component>
		</Exec1>
		
		<Exec3 type="periodic">
			<main_component>Wnd1</main_component>
			<interval>0.2</interval>
		</Exec3>
	</Executors>

	<!-- Event connections -->
	<Events>
		<Event source="Mov1.newImage" destination="Wnd1.onNewImage"/>
	</Events>

	<!-- Data stream assignments -->
	<DataStreams>
		<Mov1>
			<out_img type="out" group="Con1"/>
		</Mov1>

		<Wnd1>
			<in_img  type="in" group="Con1"/>
		</Wnd1>
	</DataStreams>

</Task>
