<?xml version="1.0" encoding="utf-8"?>
<Task>
	<!-- List of components -->
	<Components>
		
		<Mov1 type="Movie" thread="Thread1" group="s1">
			<filename>/home/mati/Sign_1_HD.avi</filename>
		</Mov1>

		<Proc type="SIFTOpenCL" thread="Thread1" group="s1">
			<type>BINARY</type>
			<maxval>192</maxval>
		</Proc>

		<Window type="CvWindow" thread="Thread1" group="s1">
			<title>Preview</title>
			<count>2</count>
		</Window>
	</Components>

	<!-- Threads of execution -->
	<Executors>
		<Thread1 type="periodic">
			<main_component>Mov1</main_component>
		</Thread1>
	</Executors>

	<!-- Event connections -->
	<Events>
		<Event source="Mov1.newImage" destination="Window.onNewImage1"/>
		<Event source="Mov1.newImage" destination="Proc.onNewImage"/>
		<Event source="Proc.newImage" destination="Window.onNewImage0"/>
	</Events>

	<!-- Data stream assignments -->
	<DataStreams>
		<Mov1>
			<out_img type="out" group="Con"/>
		</Mov1>

		<Proc>
			<in_img type="in" group="Con"/>
			<out_img type="out" group="Con2"/>
		</Proc>

		<Window>
			<in_img0 type="in" group="Con2"/>
			<in_img1 type="in" group="Con"/>
		</Window>
	</DataStreams>

</Task>
